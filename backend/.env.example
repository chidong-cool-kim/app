# 데이터베이스 설정 (MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/studytime?retryWrites=true&w=majority

# 서버 설정
PORT=5000
NODE_ENV=production

# Gmail SMTP 설정 (인증코드 발송용)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password

# JWT 시크릿 (필수 - 랜덤 문자열로 변경)
JWT_SECRET=your-super-secret-jwt-key-change-this-to-random-string

# OpenAI API Key (AI 기능용)
OPENAI_API_KEY=sk-your-openai-api-key-here

# 보안 설정
BCRYPT_SALT_ROUNDS=12

# CORS 설정 (프로덕션)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# 파일 업로드 설정
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate Limiting 설정
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5
VERIFICATION_RATE_LIMIT_WINDOW_MS=300000
VERIFICATION_RATE_LIMIT_MAX_ATTEMPTS=3
